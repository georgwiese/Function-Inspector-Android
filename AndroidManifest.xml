<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.georgwiese.functionInspectorLite"
    android:versionCode="21"
    android:versionName="3.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:icon="@drawable/icon_lite"
        android:label="@string/app_name_lite" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name_lite"
            android:theme="@style/SplashscreenTheme"
            android:configChanges="touchscreen|keyboard|keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" >
            <!--android:configChanges="touchscreen|keyboard|keyboardHidden|orientation"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreen"
            android:configChanges="touchscreen|keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name_lite"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Prefs"
            android:label="@string/prefs_title" />
        <activity
            android:name=".TableActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/table_title"
            android:theme="@android:style/Theme.NoTitleBar" />

        <meta-data
            android:name="ADMOB_PUBLISHER_ID"
            android:value="a14cf957c728954" />
        <meta-data
            android:name="ADMOB_ALLOW_LOCATION_FOR_ADS"
            android:value="true" />

        <!-- AdMobActivity definition -->
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <!--
Track Market installs          
<receiver android:name="com.admob.android.ads.analytics.InstallReceiver"
android:exported="true">
<intent-filter>
   <action android:name="com.android.vending.INSTALL_REFERRER" />
</intent-filter>
</receiver>
        -->

        <meta-data
            android:name="com.mobclix.APPLICATION_ID"
            android:value="60B13D57-A5C0-4CC3-BD3A-311158F83397" /> <!-- 60B13D57-A5C0-4CC3-BD3A-311158F83397 insert-your-application-key -->
        <activity
            android:name="com.mobclix.android.sdk.MobclixBrowserActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>
    <!-- AdMob SDK requires Internet permission -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
<!--  <uses-permission android:name="com.android.vending.CHECK_LICENSE" /> -->

</manifest>
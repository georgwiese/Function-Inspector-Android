<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/about" />
  </ScrollView>
  <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
    <Button android:id="@+id/bt_about_ok" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/ok" />
  </LinearLayout>
</LinearLayout>
